<UserControl x:Class="WpfDate.Views.DateUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfDate.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid HorizontalAlignment="Center" Width="576">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DatePicker Name="datePicker" IsDropDownOpen="True" SelectedDateFormat="Short"  Grid.Row="0" />
        <TextBlock
         FontSize="20"
            Grid.Row="1" Margin="5"
         Text="{Binding Birthday, Mode=TwoWay}"/>
        <TextBlock
         FontSize="20"
            Grid.Row="2" Margin="5"
         Text="Західна астрологічна системи: "/>
        <TextBlock
         FontSize="20"
            Grid.Row="3" Margin="5"
         Text="Китайська астрологічна системи: "/>
    </Grid>
</UserControl>
