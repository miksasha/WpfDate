<Window x:Class="WpfDate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDate" 
        xmlns:viewmodels="clr-namespace:WpfDate.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewmodels:MainViewModels />
    </Window.DataContext>

    <Grid HorizontalAlignment="Center" Width="576">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <DatePicker Name="datePicker" IsDropDownOpen="True" SelectedDateFormat="Short"  Grid.Row="0" />
        <TextBlock
         FontSize="20"
            Grid.Row="1" Margin="5"
         Text="{Binding Age, Mode = OneWay}"/>
        <TextBlock
         FontSize="20"
            Grid.Row="2" Margin="5"
         Text="Західна астрологічна системи: "/>
        <TextBlock
         FontSize="20"
            Grid.Row="3" Margin="5"
         Text="Китайська астрологічна системи: "/>
    </Grid>

</Window>
